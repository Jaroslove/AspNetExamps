
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @helper CreateList(string[] items) { 
        <ul>
            @foreach (string item in items)
            {
                <li>@item</li>
            }
        </ul>                
    }

        DayOfWeek: @CreateList(ViewBag.Days)
        Months: @CreateList(ViewBag.Months)
    </div>
</body>
</html>
